<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.danielburgnerjr.flipulator" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application tools:replace="android:allowBackup"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/FlipPremiumOpenScreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="About"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".LocationActivity"
            android:label="Location"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".SalesMortgageActivity"
            android:label="Sales/Mortgage Info"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateVisible|adjustPan" >
        </activity>
        <activity
            android:name=".ReservesActivity"
            android:label="Reserves (6 Months)"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".ClosExpPropMktInfoActivity"
            android:label="Closing Expenses/Prop Mkt Info"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".FinalResultActivity"
            android:label="Final Result"
            android:windowSoftInputMode="stateHidden|adjustPan">
        </activity>
    </application>

</manifest>