<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scvFinalResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <fragment xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/fragment_location_final_result"
                android:name="com.danielburgnerjr.flipulator.LocationFinalResultFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/fragment_location_fin_result" />

            <fragment xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/fragment_sales_mortgage_fin_result"
                android:name="com.danielburgnerjr.flipulator.SalesMortgageFinalResultFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/fragment_sales_mortgage_final_result" />

            <fragment xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/fragment_reserves_fin_result"
                android:name="com.danielburgnerjr.flipulator.ReservesFinalResultFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/fragment_reserves_final_result" />

            <fragment xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/fragment_closing_expenses_fin_result"
                android:name="com.danielburgnerjr.flipulator.ClosingExpensesFinalResultFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/fragment_closing_expenses_final_result" />

            <LinearLayout
                android:id="@+id/llPropMarketInfoFR"
                android:layout_width="fill_parent"
                android:layout_height="20sp"
                android:layout_below="@+id/fragment_closing_expenses_fin_result"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtPropMarketInfo"
                    android:layout_width="0dp"
                    android:layout_height="20sp"
                    android:layout_weight="1"
                    android:text="@string/propMktInfo" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFMVARV"
                android:layout_width="fill_parent"
                android:layout_height="20sp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtFMVARV"
                    android:layout_width="0dp"
                    android:layout_height="20sp"
                    android:layout_weight="1"
                    android:text="@string/FMVARV" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llComparables"
                android:layout_width="fill_parent"
                android:layout_height="20sp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtComparables"
                    android:layout_width="0dp"
                    android:layout_height="20sp"
                    android:layout_weight="1"
                    android:text="@string/comparables" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSellingPrice"
                android:layout_width="fill_parent"
                android:layout_height="20sp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtSellingPrice"
                    android:layout_width="0dp"
                    android:layout_height="20sp"
                    android:layout_weight="1"
                    android:text="@string/sellingPrice" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBuyerCosts"
                android:layout_width="fill_parent"
                android:layout_height="20sp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtBuyerCosts"
                    android:layout_width="0dp"
                    android:layout_height="20sp"
                    android:layout_weight="1"
                    android:text="@string/buyerCosts" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llGrossProfit"
                android:layout_width="fill_parent"
                android:layout_height="20sp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtGrossProfit"
                    android:layout_width="0dp"
                    android:layout_height="20sp"
                    android:layout_weight="1"
                    android:text="@string/grossProfit" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCapGains"
                android:layout_width="fill_parent"
                android:layout_height="20sp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtCapGains"
                    android:layout_width="0dp"
                    android:layout_height="20sp"
                    android:layout_weight="1"
                    android:text="@string/capGains" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llNetProfit"
                android:layout_width="fill_parent"
                android:layout_height="35sp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtNetProfit"
                    android:layout_width="0dp"
                    android:layout_height="20sp"
                    android:layout_weight="1"
                    android:text="@string/netProfit" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llReturnOnInvestment"
                android:layout_width="fill_parent"
                android:layout_height="20sp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtReturnOnInvestment"
                    android:layout_width="0dp"
                    android:layout_height="20sp"
                    android:layout_weight="1"
                    android:text="@string/returnInvestment" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMoneyOut"
                android:layout_width="fill_parent"
                android:layout_height="20sp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtMoneyOut"
                    android:layout_width="0dp"
                    android:layout_height="20sp"
                    android:layout_weight="1"
                    android:text="@string/moneyOut" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMoneyIn"
                android:layout_width="fill_parent"
                android:layout_height="20sp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtMoneyIn"
                    android:layout_width="0dp"
                    android:layout_height="20sp"
                    android:layout_weight="1"
                    android:text="@string/moneyIn" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPercReturn"
                android:layout_width="fill_parent"
                android:layout_height="20sp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtPercReturn"
                    android:layout_width="0dp"
                    android:layout_height="20sp"
                    android:layout_weight="1"
                    android:text="@string/percReturn" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCashCashRet"
                android:layout_width="fill_parent"
                android:layout_height="100sp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtCashCashRet"
                    android:layout_width="0dp"
                    android:layout_height="20sp"
                    android:layout_weight="1"
                    android:text="@string/cashCashRet" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/llPrevSave"
        android:layout_width="fill_parent"
        android:layout_height="35sp"
        android:layout_above="@+id/llResEmail"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="100sp"
            android:layout_height="35sp"
            android:layout_weight="0.5"
            android:text="@string/prev"
            android:onClick="prevPage"
            android:background="#690"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="100sp"
            android:layout_height="35sp"
            android:layout_weight="0.5"
            android:text="@string/save"
            android:onClick="saveFile"
            android:background="#690"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llResEmail"
        android:layout_width="fill_parent"
        android:layout_height="35sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnMainMenu"
            android:layout_width="100sp"
            android:layout_height="35sp"
            android:layout_weight="0.5"
            android:onClick="mainMenu"
            android:text="@string/main_menu"
            android:background="#690"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnEmail"
            android:layout_width="100sp"
            android:layout_height="35sp"
            android:layout_weight="0.5"
            android:onClick="nextPage"
            android:text="@string/email"
            android:background="#690"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>