<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llLocationFR"
        android:layout_width="fill_parent"
        android:layout_height="20sp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtLocationInfo"
            android:layout_width="0dp"
            android:layout_height="20sp"
            android:layout_weight="1"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/location" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFinanceType"
        android:layout_width="fill_parent"
        android:layout_height="35sp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="35sp"
            android:layout_weight="0.5"
            android:text="@string/finance_class_fr"
            android:textColor="#454545"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtFinanceType"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:hint="@string/finance_class"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAddress"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llFinanceType"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="35sp"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/address" />

        <EditText
            android:id="@+id/txtAddressFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:hint="@string/address"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCityStZip"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llAddress"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="35sp"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/citystzip" />

        <EditText
            android:id="@+id/txtCityStZip"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textSize="16sp"
            android:hint="@string/citystzip"
            android:textColor="#454545"
            android:inputType="text" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llSquareFootage"
        android:layout_width="fill_parent"
        android:layout_height="35sp"
        android:layout_below="@+id/llCityStZip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/sq_footage" />

        <EditText
            android:id="@+id/txtSq_FootageFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:hint="@string/sq_footage"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBedroomsBathrooms"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llSquareFootage"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="35sp"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/bed_bath" />

        <EditText
            android:id="@+id/txtBedroomsBathrooms"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:hint="@string/bed_bath"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>
</RelativeLayout>
