<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llSalesInfoFR"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtSalesInfo"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:textColor="#454545"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/sales" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSalePriceFR"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="40sp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/salePrice" />

        <EditText
            android:id="@+id/txtSalePriceFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPercentDown"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llSalePriceFR"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/percentDown" />

        <EditText
            android:id="@+id/txtPercentDownFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOfferBid"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llPercentDown"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/offerBid" />

        <EditText
            android:id="@+id/txtOfferBidFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRehabBudget"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llOfferBid"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvRehabBudget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/rehab_budget" />

        <EditText
            android:id="@+id/txtRehabBudgetFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBudgetItems"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:layout_below="@+id/llRehabBudget"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0sp"
            android:layout_height="25sp"
            android:layout_weight="1"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/budgetItems" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBudgetItemsTxt"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:layout_below="@+id/llBudgetItems"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/txtBudgetItemsFR"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:inputType="textMultiLine"
            android:lines="4"
            android:minLines="2"
            android:maxLines="4"
            android:gravity="top|start"
            android:textColor="#454545"
            android:textSize="16sp"
            android:ems="10"
            android:imeOptions="actionDone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMortgageFR"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llBudgetItemsTxt"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtMortgageInfo"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:textColor="#454545"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/mortgage" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDownPayment"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llMortgageFR"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvDownPayment"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/downPayment" />

        <EditText
            android:id="@+id/txtDownPayment"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llInterestRate"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llDownPayment"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/interestRate" />

        <EditText
            android:id="@+id/txtInterestRateFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTerm"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llInterestRate"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/term" />

        <EditText
            android:id="@+id/txtTermFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMonthlyPmt"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llTerm"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvMonthlyPmt"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/monthlyPmt" />

        <EditText
            android:id="@+id/txtMonthlyPmt"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>
</RelativeLayout>
