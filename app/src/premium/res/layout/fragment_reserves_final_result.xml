<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llMortPmtFR"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvMortPmtFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/mortPmt" />

        <EditText
            android:id="@+id/txtMortPmtFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llInsuranceFR"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/insurance" />

        <EditText
            android:id="@+id/txtInsuranceFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTaxesFR"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llInsurance"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/taxes" />

        <EditText
            android:id="@+id/txtTaxesFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llWaterFR"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llTaxes"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/water" />

        <EditText
            android:id="@+id/txtWaterFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llGasFR"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llWater"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/gas" />

        <EditText
            android:id="@+id/txtGasFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llElectricFR"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llGas"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/electric" />

        <EditText
            android:id="@+id/txtElectricFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTotalReserves"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvTotalReserves"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/totres" />

        <EditText
            android:id="@+id/txtTotalReserves"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

</RelativeLayout>