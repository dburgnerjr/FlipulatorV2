<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llReservesFR"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtReserves"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/reserves" />

        <Spinner
            android:id="@+id/spnTimeFrame"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMortPmtFR"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llReservesFR"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvMortPmtFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/mortPmt" />

        <EditText
            android:id="@+id/txtMortPmtFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llInsuranceFR"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llMortPmtFR"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/insurance" />

        <EditText
            android:id="@+id/txtInsuranceFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTaxesFR"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llInsuranceFR"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/taxes" />

        <EditText
            android:id="@+id/txtTaxesFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llWaterFR"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llTaxesFR"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/water" />

        <EditText
            android:id="@+id/txtWaterFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llGasFR"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llWaterFR"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/gas" />

        <EditText
            android:id="@+id/txtGasFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llElectricFR"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llGasFR"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/electric" />

        <EditText
            android:id="@+id/txtElectricFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTotalReserves"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llElectricFR"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvTotalReserves"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/totres" />

        <EditText
            android:id="@+id/txtTotalReserves"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCostOfInvestment"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llTotalReserves"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtCostOfInvestment"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:textColor="#454545"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/costInvestment" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTotalCostsFR"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llCostOfInvestment"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtTotalCosts"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/totalCosts" />

        <EditText
            android:id="@+id/txtTotalCostsFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOutOfPocketExpensesFR"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llTotalCostsFR"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtOutOfPocketExpenses"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/outOfPocketExp" />

        <EditText
            android:id="@+id/txtOOPExpFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBuyerCostsFR"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llOutOfPocketExpensesFR"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtBuyerCosts"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/buyerCosts" />

        <EditText
            android:id="@+id/txtBuyerCostsFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llGrossProfitFR"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llBuyerCostsFR"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtGrossProfit"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/grossProfit" />

        <EditText
            android:id="@+id/txtGrossProfitFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCapGainsFR"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llGrossProfitFR"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtCapGains"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/capGains" />

        <EditText
            android:id="@+id/txtCapGainsFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llNetProfitFR"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/llCapGainsFR"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtNetProfit"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:textColor="#454545"
            android:textSize="16sp"
            android:text="@string/netProfit" />

        <EditText
            android:id="@+id/txtNetProfitFR"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"
            android:ems="10"
            android:textColor="#454545"
            android:textSize="16sp"
            android:inputType="numberDecimal" />
    </LinearLayout>

</RelativeLayout>